@model amsterdam.Models.recommendation
@{
    var Title = "Add Recommendation";
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<form method="post">
	<div class="row p-3 border">
		<input type="hidden" asp-for="Id"/>
		@if(Model.Id != 0)
		{
			Title = "Update Recommendation";
		}
		<div class="col-8 border-bottom">
			<h2 class="text-primary">@Title</h2>
		</div>
		<div class="col-8 pt-4">
			<div class="form-group row pb-2">
					<label asp-for="Type"></label>
					<input asp-for="Type" class="form-control" />
			</div>
			<div class="form-group row pb-2">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
			</div>
			<div class="form-group row pb-2">
				<label asp-for="Comment"></label>
				<input asp-for="Comment" class="form-control" />
			</div>
			<div class="form-group row pb-2">
				<label asp-for="Score"></label>
				<input asp-for="Score" class="form-control" />
			</div>
			<div class="form-group row pt-2">
				<div class="col-4 offset-8">
					@if(Model.Id !=0)
					{
						<button type="submit" class="btn btn-primary form-control">Update Recommendation</button>
					}
					else
					{
						<button type="submit" class="btn btn-primary form-control">Add Recommendation</button>
					}
				</div>
				<div class="col-4 pt-2 offset-8">
					<a asp-controller="Recommendation" asp-action="Index" class="btn btn-success form-control">Back To List</a>
				</div>
			</div>
		</div>
	</div>
</form>

